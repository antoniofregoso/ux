<odoo>

    <record model="ir.ui.view" id="product_template_form_search">
        <field name="name">product.template.product.website.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//filter[@name='filter_to_purchase']" position="after">   
        		<filter string="In Landing Page" name="landig_page_published" domain="[('landig_page_published', '=', True)]"/>
        	</xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.product.website.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//page[@name='sales']" position="inside">     
	        	<group string="Services Landing Page">
	        		<field name="service_ids" widget="many2many_tags"	  />
	        	</group>   		
            	<group  >
            	<group><field name="landig_page_published" /></group>
                </group>
        	</xpath>
        </field>
     </record>
     
     <record id="service_tree_view" model="ir.ui.view">
        <field name="name">product.service.tree</field>
        <field name="model">product.service</field>
        <field name="arch" type="xml">
            <tree string="Product Services">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    
     <record id="product_service_view_form" model="ir.ui.view">
        <field name="name">product.service.form</field>
        <field name="model">product.service</field>
        <field name="arch" type="xml">
            <form string="Product Service">
            	<sheet>   
                	<field name="name"/>
            	</sheet>
         </form>
         </field>
      </record>
      
    <record id="service_action" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.service</field>
        <field name="view_mode">tree,form</field>
    </record>
     
      <menuitem id="menu_product_services" name="Product Services" action="service_action" parent="stock.menu_stock_inventory_control" sequence="6" groups="product.group_product_variant"/>
        
     <menuitem action="service_action" id="menu_sale_product_services" name="Product Services" parent="sale.prod_config_main" sequence="8" />
</odoo>