<odoo>

	<template id="s_caramba_services" name="Services">
	 	<section class="crmb-services-swiper" id="crmb-services-swiper" >
	 		<div class="container  pb16">
	 			<div class="row">
	 			<div class="col-lg-12 s_title pt16 pb16" style="text-align: center;">
                    <h1 class="s_title_thin">Services</h1>
                </div>
	 			
	 			</div>
	 			<div class="swiper-container crmb-services-container">
	 			
	 			</div>
	 		</div>
	 	</section>
	 </template>
	 
	 <template id="s_services_template">
	 	 <div class="swiper-wrapper">
	   <t t-foreach="services" t-as="s">
	    	 <div class="swiper-slide crmb-service-slide card" itemscope="itemscope" itemtype="https://schema.org/Service">
	    	 		<div class="card-header">
	    	 		<h5 class="card-title crmb-card-title" t-esc="s.name" itemprop="serviceType"/>
	    	 		<p class="card-text crmb-card-text" ><spam t-esc="s.description_sale"/></p>
	    	 		<div t-if="s.show_price" class="crmb-price-container">
		    	 		<div class="crmb-price" itemprop="offers" itemscope="itemscope" itemtype="https://schema.org/Offer">
		    	 			<span class="crmb-money-sign" itemprop="priceCurrency" t-att-content="website.company_id.currency_id.name">$</span>
		    	 			<span class="crmb-money" t-esc="str(int(s.list_price))" itemprop="price" t-att-content="s.list_price"/>
		    	 			<span class="crmb-cents" t-raw="'.' + str(round(s.list_price - int(s.list_price), 2)).replace('0.','').ljust(2,'0') + '&lt;br /&gt;/' +s.uom_name"/>
		    	 		</div>
	    	 		</div>
	    	 		</div>
	    	 		<div class="card-body crmb-body">
	    	 		 <ul class="list-group list-group-flush" t-foreach="s.service_ids" t-as="c" itemprop="hasOfferCatalog" itemscope="itemscope" itemtype="https://schema.org/OfferCatalog">
	    	 		 	<li class="list-group-item" itemprop="itemListElement" itemscope="itemscope" itemtype="https://schema.org/Offer">
						  	<div itemprop="itemOffered" itemscope="itemscope" itemtype="https://schema.org/Service">
							  <span itemprop="name" t-esc="c.name"/>
						   	</div>
						  </li>
	    	 		 </ul>
	    	 	</div>
				<div t-if="s.show_button" class="card-footer text-center">
					<t t-set="callToAction" t-value="call_to_action"/>
					<a  class="btn btn-primary " t-att-href="s.button_url"><span t-esc="callToAction[s.call_to_action]"/></a>
				</div>
	    	 </div>
	    </t> 
	    </div>
	     <div class="swiper-pagination"></div>

	     <script>
     		var swiper = new Swiper('.crmb-services-container', {
            effect: 'coverflow',
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: 'auto',
            initialSlide: 1,
            coverflowEffect: {
              rotate: 50,
              stretch: 0,
              depth: 100,
              modifier: 1,
              slideShadows : true,
            },
            pagination: {
              el: '.swiper-pagination',
              clickable: true,
              renderBullet: function (index, className) {
	          return '<span class="' + className + '">' + (index + 1) + '</span>';
	        },
            },
          });
  </script>
	 </template>
	 



     <template id="website_services_snippet" inherit_id="website.snippets" >
	    <xpath expr="//div[@id='snippet_effect']//div[hasclass('o_panel_body')]" position="inside">  	
        	<t t-snippet="website_services.s_caramba_services" t-thumbnail="/website_services/static/src/img/snippets_thumbs/s_services.svg" />    
         </xpath>
     </template>

	<!--  Snippets' Options  -->
	




        
</odoo>