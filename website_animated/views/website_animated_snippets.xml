<odoo>

<!-- Snippets' Options -->
<template id="s_animated_options" inherit_id="website.snippet_options"  name="Animated snippet options">
     <xpath expr="." position="inside">
        <div data-js="AnimatedCSS" data-selector=".figure .col-lg-2, .col-lg-4, .col-lg-6, .col-lg-8, .col-lg-10, .col-lg-12"  data-no-preview="true">
            <we-select string="Animations"  name="animated"  data-attribute-name="animated">
                <we-button data-select-data-attribute="none">None</we-button>
                <we-button data-select-data-attribute="zoomIn">Zoom In</we-button>
                <we-button data-select-data-attribute="zoomInDown">Zoom In Down</we-button>
                <we-button data-select-data-attribute="zoomInUp">Zoom In Up</we-button>
                <we-button data-select-data-attribute="fadeInDown">Fade In Down</we-button>
                <we-button data-select-data-attribute="fadeInLeft">Fade In Left</we-button>
                <we-button data-select-data-attribute="fadeInRight">Fade In Right</we-button>
                <we-button data-select-data-attribute="fadeInUp">Fade In Up</we-button>
                <we-button data-select-data-attribute="flipInX">Flip In X</we-button>
                <we-button data-select-data-attribute="flipInY">Flip In Y</we-button>
                <we-button data-select-data-attribute="lightSpeedInRight">Light Speed In Right</we-button>
                <we-button data-select-data-attribute="lightSpeedInLeft">Light Speed In Left</we-button>
                <we-button data-select-data-attribute="rotateIn">Rotate In</we-button>
                <we-button data-select-data-attribute="rotateInDownLeft">Rotate In Down Left</we-button>
                <we-button data-select-data-attribute="rotateInDownRight">Rotate In Down Right</we-button>
                <we-button data-select-data-attribute="slideInDown">Slide In Down</we-button>
                <we-button data-select-data-attribute="slideInLeft">Slide In Left</we-button>
                <we-button data-select-data-attribute="slideInRight">Slide In Right</we-button>
                <we-button data-select-data-attribute="slideInUp">Slide In Up</we-button>
                <we-button data-select-data-attribute="flash">Flash</we-button>
                <we-button data-select-data-attribute="heartBeat">Heart Beat</we-button>
                <we-button data-select-data-attribute="rollIn">Roll In</we-button>
                <we-button data-select-data-attribute="jackInTheBox">Jack In The Box</we-button>
                <we-button data-select-data-attribute="swing">Swing</we-button>
                <we-button data-select-data-attribute="jello">Jello</we-button>
                <we-button data-select-data-attribute="swing">Swing</we-button>
            </we-select>
    	</div>
    </xpath>
</template>

</odoo>